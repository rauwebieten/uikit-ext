doctype html

html(lang='en')
    head
        title UIkit-ext demo
    body
        div.uk-container.uk-container-large
            h1 UIkit-ext demo
            div(uk-grid)
                div.uk-width-1-6
                    div(uk-sticky)
                        ul.uk-nav.uk-nav-default
                            li.uk-nav-header Content
                            li
                                a(href="#buttons",uk-scroll) Buttons
                                a(href="#type",uk-scroll) Type
                                a(href="#alerts",uk-scroll) Alerts
                                a(href="#background",uk-scroll) Background
                            li.uk-nav-divider

                div.uk-width-5-6
                    include pug/buttons.pug
                    include pug/type.pug
                    include pug/alerts.pug
                    include pug/background.pug