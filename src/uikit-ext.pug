doctype html

html(lang='en')
    head
        title UIkit-ext demo
        script(src="https://unpkg.com/hyperscript.org@0.0.8")
        script(src="https://unpkg.com/htmx.org@1.3.3")
    body
        div.uk-container.uk-container-large

            h1 UIkit-ext demo
            div(uk-grid)
                div.uk-width-1-6
                    div(uk-sticky)
                        ul.uk-nav.uk-nav-default
                            li.uk-nav-header Theme
                            li
                                a(href="#offcanvas",uk-scroll) Off-canvas
                            li
                                a(href="#buttons",uk-scroll) Buttons
                            li
                                a(href="#type",uk-scroll) Type
                            li
                                a(href="#alerts",uk-scroll) Alerts
                            li
                                a(href="#background",uk-scroll) Background
                            li
                                a(href="#notifications",uk-scroll) Notifications
                            li
                                a(href="#labels",uk-scroll) Labels
                            li
                                a(href="#badges",uk-scroll) Badges
                            li
                                a(href="#tab",uk-scroll) Tab
                            li
                                a(href="#subnav",uk-scroll) Subnav
                            li
                                a(href="#list",uk-scroll) List
                            li
                                a(href="#speech",uk-scroll) Speech
                            li.uk-nav-divider
                            li.uk-nav-header Libs
                            li
                                a(href="#fontawesome",uk-scroll) Font Awesome
                            li
                                a(href="#hyperscript",uk-scroll) Hyperscript
                            li
                                a(href="#htmx",uk-scroll) HTMX
                            li
                                a(href="#hover-css",uk-scroll) Hover.css
                            li
                                a(href="#flatpickr",uk-scroll) Flatpickr

                div.uk-width-5-6
                    include pug/navbar.pug
                    include pug/offcanvas.pug
                    include pug/buttons.pug
                    include pug/type.pug
                    include pug/alerts.pug
                    include pug/background.pug
                    include pug/notifications.pug
                    include pug/labels.pug
                    include pug/badges.pug
                    include pug/tab.pug
                    include pug/subnavs.pug
                    include pug/list.pug
                    include pug/speech.pug
                    include pug/fontawesome
                    include pug/hyperscript
                    include pug/htmx
                    include pug/hover-css.pug
                    include pug/flatpickr.pug

                    p.uk-margin-large